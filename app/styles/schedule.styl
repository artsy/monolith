@import 'common'

#screen__events, #screen__alert, #screen__videos
  position relative
  width 100%
  height 100%
  top 0
  left 0
  padding 84px

#screen__videos
  position absolute
  background-color #000
  padding 0
  opacity 0
  transition opacity 0.7s

  &.is-active
    opacity 1

#screen__alert
  position absolute
  opacity 0
  pointer-events none
  transition opacity 0.7s

  &.is-active
    opacity 1

.corner-header
  color white
  border-top 3px solid white
  font-size 70px
  width 500px
  position absolute
  padding-top 10px

.events__mini-schedule
  garamond-italic()
  position absolute
  right 0
  font-size 32px
  width 412px

.events__mini-schedule__item
  margin-bottom 32px
  line-height 1.1

  &.is-selected
    color white

.events__details
  position absolute
  bottom 84px
  left 0
  font-size 64px
  width 100%

.events__details__inner
  height 1000px

.events__details__item
  height 1000px
  padding 84px
  width 100%
  color white

.events__details__item__time
  margin-bottom 32px

.events__details__item__title
  garamond-italic()
  line-height 1

.events__details__item__subtitle
  font-size 46px

.events__details__item__description
  font-size 46px

  margin 1em 0

  p
    margin 0

  strong
    avant-garde()
    display inline-block
    margin-top 32px
    font-size 32px

.flickity-page-dots

  .dot
    background-color #fff







