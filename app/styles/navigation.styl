@import 'common'

.navigation-container
.navigation
  width 100%
  height 100%
.navigation-container
  display table
  position absolute
  top 0
  right 0
  bottom 0
  left 0
.navigation
  display table-cell
  vertical-align middle

.navigation-header
  text-align center
  padding (unit * 2) unit

@keyframes blink
  0%
    opacity 0
    animation-timing-function linear
  50%
    opacity 1
    animation-timing-function linear
  100%
    opacity 0
    animation-timing-function linear

.navigation-name
  avant-garde()
  color white
  animation blink 2s infinite
  opacity 0

.fair
  position relative
  padding ((unit / 2) + 2) unit (unit / 2)
  width 100%
  avant-garde()
  font-size 27px
  transition background-color 0.125s
  clearfix()
  clear both
  &:hover
    background-color highlightColor
    .fair-name
      color white
  &:first-child
    border-top 2px solid borderColor
  &:last-child
    border-bottom 2px solid borderColor

.fair-name
  float left
.fair-actions
  float right
  > a
    display inline-block
    color white
    text-decoration none
  > a:hover
    color black
