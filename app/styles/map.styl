@import 'common'

mapWidth          = 1034px
mapHeight         = 968px
mapHeaderHeight   = 200px
actionSize        = 600px

queueTransitionDuration       = 1s
indicatorTransitionDuration   = 1s

.map-header
  position absolute
  top 0
  left 0
  width 100%
  height mapHeaderHeight
  margin 0
  padding 0 (unit * 4)

.map-name
  avant-garde()
  display inline-block
  margin 0
  font-size 50px
  font-weight normal
  line-height mapHeaderHeight
  vertical-align middle
  color fontColor

#map-queue-shield
  position absolute
  top screenHeaderHeight
  width 400px
  right 0
  height actionSize
  background linear-gradient(left, transparent, rgba(black, 0.75))
  z-index 2

#map-queue
  position absolute
  top screenHeaderHeight
  bottom (screenHeight - mapHeight)
  left (unit * 4)
  // Ensure children have explcit font-size
  font-size 0
  white-space nowrap
  transition none
  z-index 1

  // Transition state
  // ----------------
  .action:first-child
    .action-metadata
    .action-type
      opacity 1
  &.is-transitioning
    transition transform queueTransitionDuration ease-in-out
    transform translateX(-(actionSize + (unit * 8)))
    .action:nth-child(2)
      .action-metadata
      .action-type
        opacity 1

// Action panels
// -------------
.action
  width actionSize
  display inline-block
  vertical-align top
  margin-right (unit * 8)
.action-image
  position relative
  height actionSize
.action-figure
  position absolute
  display inline-block
  bottom 0
.af-outline
  display inline-block
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  border 1px solid rgba(255,255,255,.125)
.action-metadata
  margin (unit * 2) 0
  color secondaryFontColor
  font-size 63px
  line-height 1.2
  white-space normal
  prevent-content-shift()
  &[data-type='ArtworkCollect']
    font-size 40px
    line-height 1.3
.action-type
  margin unit 0
  avant-garde()
  font-size 21px
  letter-spacing 1px
.action-metadata
.action-type
  transition opacity queueTransitionDuration ease-in-out
  opacity 0

// Map
// ---
#map-map
  position absolute
  right 0
  bottom 0
  width mapWidth
  height mapHeight
  background-color transparent
  background-position bottom right
  background-repeat no-repeat
  prevent-content-shift()

// Seen (Displayed if no map is available)
// ---------------------------------------
#map-seen-header
  position absolute
  bottom (500px + (unit * 3))
  left (unit * 4)
.map-seen-name
  avant-garde()
  font-size 21px
  letter-spacing 1px

#map-seen-border
  position absolute
  bottom (500px + (unit * 2))
  right 0
  left (unit * 4)
  height 2px
  background-color borderColor
  z-index 3

#map-seen-shield
  position absolute
  width 220px
  right 0
  bottom 0
  height actionSize
  background linear-gradient(left, transparent, rgba(black, 0.75))
  z-index 2

#map-seen
  actionSize    = 220px
  actionMargin  = (unit * 4)

  position absolute
  bottom 0
  left (unit * 4) - ((actionSize + actionMargin) * 2)
  height 500px
  // Ensure children have explcit font-size
  font-size 0
  white-space nowrap
  transition none
  z-index 1

  // Transition state
  // ----------------
  .action
    .action-metadata
    .action-type
      opacity 1
  .action:nth-child(6) .action-metadata
    opacity 0
  &.is-transitioning
    transition transform queueTransitionDuration ease-in-out
    transform translateX((actionSize + actionMargin))
    .action:nth-child(5) .action-metadata
      opacity 0

  // Action Overrides
  // ----------------
  .action
    width actionSize
    margin-right actionMargin
  .action-image
    height auto
  .action-figure
    position relative
    bottom inherit
    max-height actionSize
  .action-metadata
    margin unit 0
    color secondaryFontColor
    &
    &[data-type='ArtworkCollect']
      font-size 20px
      line-height 1.2
  .action-type
    display none

// Dot
// ---
centerColor   = #d0bee3
palePurple    = #cba2ff

dotSize   = (unit / 4)
shadow0   = 0 0 0 (dotSize * 1.5) highlightColor
shadow1   = 0 0 3px (dotSize * 4) rgba(palePurple, 0.25)
shadow2   = 0 0 3px (dotSize * 12) rgba(palePurple, 0.3)
shadow3   = 0 0 3px (dotSize * 25) rgba(palePurple, 0.6)

@keyframes dot-fade-out
  0%
    opacity 1
  100%
    opacity 0

.map-dot
  box-sizing content-box
  position absolute
  width dotSize
  height dotSize
  border-radius 50%
  background-color centerColor
  box-shadow shadow0, shadow1, shadow2
  white-space nowrap
  z-index 1
  transition all indicatorTransitionDuration
  &:after
    content ''
    display block
    background-color transparent
    width 100%
    height 100%
    border-radius 50%
    box-shadow shadow3
    animation dot-fade-out indicatorTransitionDuration
    animation-iteration-count 1
    transition all indicatorTransitionDuration
    animation-fill-mode forwards

  // Animation states
  &[data-state='active']
    transform scale(1)
    &:after
      transform scale(1)
  &[data-state='inactive']
    transform scale(0)
    &:after
      transform scale(0)

// Position Marker
// ---------------
.you-are-here
  position absolute
  width 21px
  height 24px
  margin-left -(@width / 2)
  margin-top -((@height / 2) + 10)
  background transparent url('../images/marker.png') center center no-repeat
